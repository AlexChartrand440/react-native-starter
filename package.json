{
	"name": "react-native-starter",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"postinstall": "sh ./scripts/postinstall.sh",
		"build-env": "sh ./scripts/build-env.sh",
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"start:appium": "appium",
		"test": "jest",
		"test:e2e": "jest --setupFiles ./__tests__/e2e.js --testMatch=\"**/*.e2e.js\"",
		"test:e2e:android": "E2E_DEVICE=android npm run test:e2e",
		"test:e2e:ios": "E2E_DEVICE=ios npm run test:e2e",
		"lint": "eslint src"
	},
	"eslintIgnore": [
		"config.env.js"
	],
	"dependencies": {
		"date-fns": "1.29.0",
		"lodash": "4.17.4",
		"lodash-decorators": "4.5.0",
		"mobx": "3.4.1",
		"mobx-persist": "0.4.1",
		"mobx-react": "4.3.5",
		"prop-types": "15.6.0",
		"react": "16.2.0",
		"react-native": "0.51.0",
		"react-native-code-push": "5.2.1",
		"react-native-config": "0.11.2",
		"react-native-firebase": "3.2.0",
		"react-native-navigation": "1.1.315",
		"react-native-sentry": "0.32.0"
	},
	"devDependencies": {
		"babel-core": "6.26.0",
		"babel-eslint": "8.0.3",
		"babel-jest": "22.0.3",
		"babel-plugin-module-resolver": "3.0.0",
		"babel-preset-react-native": "4.0.0",
		"babel-preset-react-native-stage-0": "1.0.1",
		"enzyme": "3.2.0",
		"enzyme-adapter-react-16": "1.1.1",
		"eslint": "4.13.1",
		"eslint-config-airbnb": "16.1.0",
		"eslint-import-resolver-babel-module": "4.0.0",
		"eslint-plugin-import": "2.8.0",
		"eslint-plugin-jest": "21.5.0",
		"eslint-plugin-jsx-a11y": "6.0.3",
		"eslint-plugin-react": "7.5.1",
		"eslint-plugin-react-native": "3.2.0",
		"jest": "22.0.3",
		"react-dom": "16.2.0",
		"react-test-renderer": "16.2.0",
		"wd": "1.5.0"
	},
	"jest": {
		"preset": "react-native",
		"setupFiles": [
			"./__tests__/jest.js"
		],
		"testMatch": [
			"**/__tests__/**/*.spec.js"
		]
	},
	"e2e": {
		"ios": {
			"platformName": "iOS",
			"platformVersion": "11.2",
			"deviceName": "iPhone Simulator",
			"app": "./ios/build/Build/Products/Release-iphonesimulator/react-native-starter.app"
		},
		"android": {
			"platformName": "Android",
			"deviceName": "Pixel_2_API_27",
			"app": "./android/app/build/outputs/apk/app-release.apk"
		}
	}
}
